# Database
DATABASE_URL=postgresql://user:password@localhost:5432/freelancer_suite
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_SSL=false

# Redis / Event Bus
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=3600
EVENT_BUS_URL=redis://localhost:6379
EVENT_BUS_CHANNEL_PREFIX=freelancer_suite

# Service
PART3_SERVICE_NAME=intelligence-service
PART3_PORT=22003
PART3_LOG_LEVEL=info
JWT_ACCESS_SECRET=dev-access-secret
INTERNAL_API_KEY=local-internal-key

# Internal API URLs
PART1_API_URL=http://localhost:22001/api/v1
PART2_API_URL=http://localhost:22002/api/v1
PART4_API_URL=http://localhost:22004/api/v1

# External Services - Currency
EXCHANGE_RATE_API_URL=https://openexchangerates.org/api
EXCHANGE_RATE_API_KEY=your_api_key

# External Services - AI
OPENAI_API_KEY=sk-your-key
OPENAI_MODEL=gpt-4-turbo
AI_INSIGHTS_ENABLED=true
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.3

# File Storage
S3_BUCKET=freelancer-suite-exports
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_key
AWS_SECRET_ACCESS_KEY=your_secret
S3_PRESIGNED_URL_EXPIRY=3600

# Feature Flags
FEATURE_AI_INSIGHTS=true
FEATURE_SCHEDULED_REPORTS=true
FEATURE_MULTI_CURRENCY=true
FEATURE_BUDGETS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Background Jobs
JOB_CONCURRENCY=5
JOB_RETRY_ATTEMPTS=3
JOB_RETRY_DELAY=5000
